[alias]
	cm = commit -S
	co = checkout
	s = status
	br = branch
	unstage = reset HEAD --
	fomo = !git fetch origin main && git rebase origin/main
	fomoma = !git fetch origin master && git rebase origin/master
	resign = rebase --exec 'git commit --amend --no-edit -S'
